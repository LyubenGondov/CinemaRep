@model MovieApplication.Models.Movie

@{
    ViewBag.Title = "AddMovie";
}

<h2>AddMovie</h2>
<style>
    body {
        background-color: #87cefa;
    }
</style>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
