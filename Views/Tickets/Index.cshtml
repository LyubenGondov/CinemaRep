@using System.Diagnostics.Eventing.Reader
@model IEnumerable<CinemaSite.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Tickets</h2>

<style>
    body {
        background-color: #87cefa;
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count() == 0)
{
    <h4>There's no tickets added. Plese click on the button above to create a new ticket!</h4>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies.MovieName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsPromotional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceInTheHall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Row)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Halls)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movies.MovieName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsPromotional)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaceInTheHall)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Row)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Halls)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
}
